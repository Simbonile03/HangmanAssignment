<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="Hangman Game">
   
            <StackLayout Padding="20">
                <Image x:Name="HangmanImage" Source="{Binding HangmanImageSource}" />
                <Label Text="{Binding GuessedWord}" FontSize="24" HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding RemainingAttempts, StringFormat='Remaining Attempts: {0}'}" FontSize="18" HorizontalOptions="CenterAndExpand" />
                <Entry Text="{Binding GuessInput, Mode=TwoWay}" Placeholder="Enter a letter" HorizontalOptions="CenterAndExpand" />
               
              <Button Text="Guess" Clicked="OnGuessClicked" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
       
</ContentPage>